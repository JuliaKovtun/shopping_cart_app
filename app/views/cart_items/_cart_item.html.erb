<div id="cart_item_<%= cart_item.id %>" class="flex items-center justify-between border-b pb-4">
  <div class="flex items-center space-x-4">
    <img src="<%= asset_path(cart_item.product.image_url) %>" alt="<%= cart_item.product.name %>" class="w-16 h-16 rounded-md border">
    <div>
      <p class="text-lg font-medium text-gray-800"><%= cart_item.product.name %></p>
    </div>
  </div>

  <div class="flex items-center justify-between space-x-4">
    <div class="flex items-center justify-center border rounded px-2 space-x-2">
      <%= button_to '-', cart_item_path(cart_item, quantity: cart_item.quantity - 1), method: :patch, remote: true, class: "text-gray-600 px-3 py-1 hover:bg-gray-200 rounded" %>
      <span class="px-3 py-1 font-medium"><%= cart_item.quantity %></span>
      <%= button_to '+', cart_item_path(cart_item, quantity: cart_item.quantity + 1), method: :patch, remote: true, class: "text-gray-600 px-3 py-1 hover:bg-gray-200 rounded" %>
    </div>
    <p class="text-lg font-medium text-gray-900">$<%= cart_item.total_price %></p>
    <%= button_to 'ðŸ—‘ï¸', cart_item_path(cart_item), method: :delete, remote: true, class: "text-gray-500 hover:text-red-600" %>
  </div>
</div>
